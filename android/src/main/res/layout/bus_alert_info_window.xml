<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Bubble + arrow -->
    <LinearLayout
        android:id="@+id/info_window_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_info_bubble"
        android:elevation="8dp"
        android:outlineProvider="background"
        android:clipToOutline="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/alertTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:paddingBottom="4dp"
                android:text="Reported at"
                android:textColor="#808080"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/alertSnippet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:text="Irinjalakuda - Kodungallur Rd, Kolothumpady, Irinjalakuda, Kerala 680121"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Icon below -->
    <ImageView
        android:id="@+id/alertIconImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/alert_bus_inactive" />
</LinearLayout>
