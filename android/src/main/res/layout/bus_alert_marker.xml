<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/busAlertParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:id="@+id/busAlertCardView"
        app:cardBackgroundColor="#e19602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/busAlertMarkerImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/alert_halt_yellow" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/busNumberText"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans"
                        android:textSize="12sp"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="MH07AB1234" />
                </LinearLayout>
                <TextView
                    android:id="@+id/alertSnippet"
                    android:textSize="7sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:text="10 mins Halt" />

            </LinearLayout>
            <ImageView
                android:id="@+id/ignitionImage"
                android:layout_width="16dp"
                android:layout_marginStart="3dp"
                android:layout_height="16dp"
                android:src="@drawable/alert_ignition_on" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
