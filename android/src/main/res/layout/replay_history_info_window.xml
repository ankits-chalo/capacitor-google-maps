<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/info_window_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_white_8"
            android:elevation="20dp"
            >

            <TextView
                android:id="@+id/lat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat : 13.038767"
                android:includeFontPadding="false"
                android:textColor="#000"
                android:layout_marginBottom="3dp"
                android:textSize="12sp"
                android:fontFamily="@font/notosans" />

            <TextView
                android:id="@+id/long_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long : 80.191239"
                android:layout_marginBottom="3dp"
                android:includeFontPadding="false"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/notosans" />

            <TextView
                android:id="@+id/speed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Speed : 20 km/h"
                android:includeFontPadding="false"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/notosans" />

            <TextView
                android:id="@+id/time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time : 10:30 AM"
                android:includeFontPadding="false"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/notosans" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/info_window_image"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="-5dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:src="@drawable/arrow_polygon" />
</LinearLayout>
