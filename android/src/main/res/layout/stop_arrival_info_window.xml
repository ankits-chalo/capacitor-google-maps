<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp"

        >

        <LinearLayout
            android:id="@+id/info_window_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_5"
            android:elevation="20dp"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/infoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:paddingBottom="4dp"
                android:text="Apna bazaare"
                android:textColor="#323232"
                android:textSize="12sp"
                android:textFontWeight="600"/>
            <LinearLayout
                android:id="@+id/arrival_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/arrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans"
                    android:text="ARR"
                    android:textColor="#808080"
                    android:textSize="10sp"
                    android:textFontWeight="600"/>
                <TextView
                    android:id="@+id/infoSnippetArr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans"
                    android:text="05:39 AM"
                    android:textColor="#323233"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/departure_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/departure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans"
                    android:text="DER"
                    android:textColor="#808080"
                    android:textSize="10sp"
                    android:textFontWeight="600"/>
                <TextView
                    android:id="@+id/infoSnippetDep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans"
                    android:text="05:39 PM"
                    android:textColor="#323232"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingLeft="4dp"/>
            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/info_window_image"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="-5dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:src="@drawable/arrow_polygon" />
</LinearLayout>
