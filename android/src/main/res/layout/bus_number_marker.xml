<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/busAlertParent"
    android:padding="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:id="@+id/busNumberMarkerCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#2196f3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/busNumberMarkerImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/live_status" />

            <TextView
                android:id="@+id/busNumberMarkerText"
                android:textSize="12sp"
                android:fontFamily="@font/notosans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                tools:text="MH07AB1234" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

