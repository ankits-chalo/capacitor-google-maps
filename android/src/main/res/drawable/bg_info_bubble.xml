<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bubble shape -->
    <item android:bottom="9dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#08000000" />
        </shape>
    </item>

    <!-- Arrow (triangle with fake shadow only on slanted lines) -->
    <item android:gravity="bottom|center_horizontal">
        <vector
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="20dp"
            android:height="10dp"
            android:viewportWidth="20"
            android:viewportHeight="10">

            <!-- Arrow fill -->
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M0,0 L10,10 L20,0 Z" />

            <!-- Shadow strokes on slanted edges -->
            <path
                android:strokeColor="#05000000"
                android:strokeWidth="2"
                android:pathData="M0,0 L10,10" />

            <path
                android:strokeColor="#05000000"
                android:strokeWidth="2"
                android:pathData="M10,10 L20,0" />
        </vector>
    </item>
</layer-list>
